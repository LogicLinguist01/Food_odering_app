<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="true"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="22dp"
        app:cardElevation="5dp"
        android:paddingBottom="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_corners">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/dropdownmanu_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/dropdownmanuaddCartPopular"
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/yellobutton"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Add to cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/dropdownmanuFoodname"
                app:layout_constraintStart_toStartOf="@+id/dropdownmanuFoodname"
                app:layout_constraintTop_toBottomOf="@+id/dropdownmanuFoodname" />

            <TextView
                android:id="@+id/dropdownmanuFoodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="price"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/dropdownmanu_food_title"
                app:layout_constraintStart_toStartOf="@+id/dropdownmanu_food_title"
                app:layout_constraintTop_toBottomOf="@+id/dropdownmanu_food_title" />

            <TextView
                android:id="@+id/dropdownmanu_food_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Food name"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#0E0E0E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>